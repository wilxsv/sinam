{% extends 'base.html.twig' %}

{% block body %}
    <h1>CtlPais</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ctlPai.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ ctlPai.nombre }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if ctlPai.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ctlpais_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ctlpais_edit', { 'id': ctlPai.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
